<Window x:Class="CSN.ProjectEulerSharp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSN.ProjectEulerSharp.UI"
        mc:Ignorable="d"
        Title="Project Euler" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Click="MI_Exit_Click"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" Height="25">
            <ProgressBar Name="barStatus" Height="12" Width="100" Visibility="Collapsed"/>
            <TextBlock Name="txtStatus" Visibility="Collapsed"/>
        </StatusBar>

        <TabControl>
            <TabItem Name="tabOverview" Header="Problems Overview"/>
            <TabItem Name="tabDetails" Header="Problem Details"/>
        </TabControl>
    </DockPanel>
</Window>
